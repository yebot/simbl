{
  "name": "simbl",
  "version": "0.1.0",
  "description": "Simple Backlog - A CLI task manager for dev projects",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "simbl": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build --compile --target=bun-darwin-arm64 --outfile=dist/simbl src/index.ts && codesign --force --sign - dist/simbl",
    "build:x64": "bun build --compile --target=bun-darwin-x64 --outfile=dist/simbl-x64 src/index.ts && codesign --force --sign - dist/simbl-x64",
    "typecheck": "tsc --noEmit",
    "build-and-install": "bun run build && sudo cp dist/simbl /usr/local/bin/ && sudo codesign --force --sign - /usr/local/bin/simbl"
  },
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "citty": "^0.1.6",
    "html-template-tag": "4.1.1",
    "js-yaml": "^4.1.0",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "@types/js-yaml": "^4.0.9",
    "typescript": "^5.7.2"
  }
}
